---
// IMPORTS
import Layout from "../layouts/Layout.astro";
import data from "../data/site.json";
import { Icon } from "astro-icon/components";

// VARIABLES
const isProd = import.meta.env.PROD;
const isDev = import.meta.env.DEV;
---

<Layout title="Welcome to Leos Astro">
   <!-- This comes from Tailwind -->
   <div class="bg-zinc-300">
      <h1>Startseite</h1>

      {
         isProd
            ? "Dies wird nur in Production Mode angezeigt"
            : "Dies wird nur im Development Mode angezeigt"
      }

      <p>{data.name}</p>
      <p>{data.nachname}</p>
      <p>Dieser Text ist von {data.name}</p>
      <p>{data.name} ist {data.person.alter} Jahre alt.</p>
      <a href={`https://${data.name}merkel.de`}
         >Webseite von {data.name.toUpperCase()}</a
      >
      <p>https://{data.name.toLowerCase()}merkel.de</p>
      <!-- This comes from styles.css -->
      <Icon name="icon" size={200} color="var(--lm-secondary)" />
   </div>
</Layout>
