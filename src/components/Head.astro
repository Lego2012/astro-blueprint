---
import { AstroFont } from "astro-font";
import { ViewTransitions } from "astro:transitions";

// The incoming page has a title and a description which will be stored here
const { title, metaDesc } = Astro.props;
---

<head>
   <AstroFont
      config={[
         {
            name: "Bellota",
            src: [
               {
                  style: "regular",
                  weight: "400",
                  path: "./public/fonts/Bellota-Regular.woff2",
               },
               {
                  style: "bold",
                  weight: "700",
                  path: "./public/fonts/Bellota-Bold.woff2",
               },
            ],
            preload: false,
            display: "swap",
            selector: "body",
            fallback: "sans-serif",
         },
      ]}
   />
   <meta charset="UTF-8" />
   <!-- We use the Meta Description from the incomping page -->
   <meta name="description" content={metaDesc} />
   <meta name="viewport" content="width=device-width" />
   <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
   <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
   <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
   <link rel="manifest" href="/site.webmanifest" />
   <meta name="generator" content={Astro.generator} />
   <link rel="sitemap" href="/sitemap-index.xml" />
   <!-- We use the Title from the incomping page -->
   <title>{title}</title>
   <ViewTransitions />
</head>
